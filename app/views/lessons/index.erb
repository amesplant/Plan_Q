<%= erb :"_navigation", :layout => false, locals: { title: "Lessons" } %>

  <div id="flagpole"></div>

  <div id="lessons_container">
    <div id="nav_lessons">
      <a class="create_lesson" href="/lessons/new">Build a Lesson</a>
    </div>

    <% if @lessons %>
    <% @lessons.each do |lesson| %>

        <div class="lesson_box">
          <div class="lesson_header">
            <div class="lesson_standard_id">8.NS.A.1</div>
            <form class="trash" action="/lessons/<%= lesson.id %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit" class="btn_trash"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
            </form>
            <a  class = "btn_edit" href="/lessons/<%= lesson.id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          </div>
          <a href="/lessons/<%= lesson.id %>">
            <div class="lesson_title"><%= lesson.title %></div>
            <div class="lesson_description"><%= lesson.description %></div>
          </a>
        </div>
    <% end %>
  <% end %>
  </div>
