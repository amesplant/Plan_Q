<%= erb :"_navigation", :layout => false %>

<div id="lessons_container">
  <div id="nav_lessons">
    <a class="create_lesson" href="/lessons/new">Build a Lesson</a>
  </div>

  <% if @lessons %>
  <% @lessons.each do |lesson| %>

      <div class="lesson_box">
        <div id="lesson_header">
          <div class="lesson_standard_id">8.NS.A.1</div>
          <form action="/lessons/<%= lesson.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input class="lesson_delete" type="submit" value="">
          </form>
          <a class="lesson_edit" href="/lessons/<%= lesson.id %>/edit">edit</a>
        </div>
        <a href="/lessons/<%= lesson.id %>">
          <div class="lesson_title"><%= lesson.title %></div>
          <div class="lesson_description"><%= lesson.description %></div>
        </a>
      </div>
  <% end %>
<% end %>
</div>
